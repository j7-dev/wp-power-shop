{
  "name": "j7-dev/wp-power-shop",
  "description": "Power Shop 是一個 WordPress 套件，安裝後，可以讓你的 Woocommerce 商店變成可以提供給多人使用的一頁商店，並且可以讓使用者自訂商品的價格，以及統計每個一頁商店的訂單狀態與銷售額",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-only",
  "authors": [
    {
      "name": "J7",
      "email": "j7.dev.gg@gmail.com"
    }
  ],
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require": {
    "kucrut/vite-for-wp": "^0.5.2",
    "usefulteam/jwt-auth": "^2.1",
    "lodash-php/lodash-php": "^0.0.7",
    "yahnis-elsts/plugin-update-checker": "^5.3"
  },
  "require-dev": {
    "wp-coding-standards/wpcs": "^2.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2"
  },
  "scripts": {
    "lint": "phpcs ./inc"
  },
  "extra": {
    "mozart": {
      "dep_namespace": "J7\\PowerShop\\",
      "dep_directory": "/vendor",
      "classmap_directory": "/inc/",
      "classmap_prefix": "J7_",
      "delete_vendor_directories": true
    }
  }
}
